{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "lib": ["ESNext"],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"]

  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}